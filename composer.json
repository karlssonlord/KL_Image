{
    "name": "kl/image",
    "description": "Provides a simple endpoint for scaling local images in a responsive manner.",
    "require": {
        "magento-hackathon/magento-composer-installer": "*",
        "magento/core": "1.9.0.1",
        "mockery/mockery": "0.9.*"
    },
    "require-dev": {
        "codeception/codeception": "2.0.10.1"
    },
    "authors": [
        {
            "name": "Karlsson Lord",
            "email": "kl@karlssonlord.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
        }
    ],
    "extra":{
        "magento-root-dir": "src/",
        "magento-deploystrategy": "symlink",
        "auto-append-gitignore": true
    },
    "autoload": {
        "psr-0": {
            "": [
                "src/app",
                "src/app/code/local",
                "src/app/code/community",
                "src/app/code/core",
                "src/lib"
            ]
        }
    }
}
